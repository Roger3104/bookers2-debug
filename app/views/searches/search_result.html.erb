<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @model == "User" %>
    <h3>Users search for "<%= @content %>"</h3>
    <%= render 'users/index',users: @records %>
  <% elsif  @model == "Book"%>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <h3>Books search for "<%= @content %>"</h3>
    <%= render 'books/index', books: @records %>
  <% end %>
</table>